{
  "name": "my-notes-app",
  "productName": "My Notes",
  "version": "1.0.0",
  "description": "Offline note-taking desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win --x64",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.mynotes.app",
    "productName": "My Notes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "cors": "^2.8.6",
    "electron-store": "^8.1.0",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "cross-env": "^7.0.3",
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.9.3"
  }
}
